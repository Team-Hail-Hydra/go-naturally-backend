generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id                         String                       @id @default(uuid())
  userId                     String                       @unique
  fullName                   String
  role                       Role
  schoolId                   String?
  ngoId                      String?
  profilePic                 String?
  email                      String                       @unique
  ecoPoints                  Int                          @default(0)
  Animals                    Animals[]
  Litter                     Litter[]
  NGO_Events_Applications    NGO_Events_Applications[]
  Plant                      Plant[]
  ngo                        NGO?                         @relation(fields: [ngoId], references: [id])
  school                     School?                      @relation(fields: [schoolId], references: [id])
  School_Events_Applications School_Events_Applications[]
}

model School {
  id            String          @id @default(uuid())
  name          String
  email         String          @unique
  phoneNo       String          @unique
  joinCode     String          @unique
  members       Profile[]
  School_Events School_Events[]
}

model NGO {
  id         String       @id @default(uuid())
  name       String
  email      String       @unique
  phoneNo    String       @unique
  joinCode   String       @unique
  NGO_Events NGO_Events[]
  members    Profile[]
}

model NGO_Events {
  id                      String                    @id @default(uuid())
  title                   String
  description             String
  latitude                Float
  longitude               Float
  date                    String
  ngoId                   String
  ngo                     NGO                       @relation(fields: [ngoId], references: [id])
  NGO_Events_Applications NGO_Events_Applications[]
}

model School_Events {
  id                         String                       @id @default(uuid())
  title                      String
  description                String
  latitude                   Float
  longitude                  Float
  date                       String
  schoolId                   String
  school                     School                       @relation(fields: [schoolId], references: [id])
  School_Events_Applications School_Events_Applications[]
}

model NGO_Events_Applications {
  id         String            @id @default(uuid())
  ngoEventId String
  profileId  String
  status     ApplicationStatus @default(PENDING)
  appliedAt  DateTime          @default(now())
  ngoEvent   NGO_Events        @relation(fields: [ngoEventId], references: [id])
  profile    Profile           @relation(fields: [profileId], references: [id])
}

model School_Events_Applications {
  id            String        @id @default(uuid())
  schoolEventId String
  profileId     String
  appliedAt     DateTime      @default(now())
  profile       Profile       @relation(fields: [profileId], references: [id])
  schoolEvent   School_Events @relation(fields: [schoolEventId], references: [id])
}

model Plant {
  id          String  @id @default(uuid())
  plantName   String
  imageUrl    String
  rarity      Int
  description String
  latitude    Float
  longitude   Float
  createdById String
  createdBy   Profile @relation(fields: [createdById], references: [userId])
}

model Litter {
  id          String  @id @default(uuid())
  beforeImg   String
  afterImg    String
  latitude    Float
  longitude   Float
  createdById String
  isAwarded   Boolean @default(false)
  createdBy   Profile @relation(fields: [createdById], references: [userId])
}

model Animals {
  id                String  @id @default(uuid())
  name              String
  description       String
  average_life_span String
  imageUrl          String
  createdById       String
  latitude          Float
  longitude         Float
  rarity            Int
  createdBy         Profile @relation(fields: [createdById], references: [userId])
}

enum Role {
  STUDENT
  TEACHER
  NGO
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}
